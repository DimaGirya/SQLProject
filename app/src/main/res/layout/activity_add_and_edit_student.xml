<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.AddAndEditStudentActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Student First Name"
        android:ems="10"
        android:id="@+id/editTextAddStudentFirstName"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Student Last Name"
        android:ems="10"
        android:id="@+id/editTextAddStudentLastName"
        android:layout_below="@+id/editTextAddStudentFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddStudentId"
        android:layout_below="@+id/editTextAddStudentLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Student ID"
        android:layout_alignRight="@+id/editTextAddStudentLastName"
        android:layout_alignEnd="@+id/editTextAddStudentLastName" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextAddStudentAddress"
        android:layout_below="@+id/editTextAddStudentId"
        android:layout_alignRight="@+id/editTextAddStudentId"
        android:layout_alignEnd="@+id/editTextAddStudentId"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:hint="Student Address" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextStudentDateOfBirhday"
        android:layout_below="@+id/editTextAddStudentAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextAddStudentAddress"
        android:layout_alignEnd="@+id/editTextAddStudentAddress"
        android:hint="Date of birthday" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add student"
        android:onClick="onClickAddStudent"
        android:id="@+id/buttonAddStudentActivity"
        android:layout_below="@+id/editTextStudentDateOfBirhday"
        android:layout_toRightOf="@+id/editTextStudentDateOfBirhday" />
</RelativeLayout>
