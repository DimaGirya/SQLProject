<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".activity.AddAndEditLectureActivity">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLectureFirstName"
        android:layout_alignParentTop="true"
        android:hint= "@string/lectureFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Lecture Last Name"
        android:id="@+id/editTextLectureLastName"
        android:layout_below="@+id/editTextLectureFirstName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint= "Lecture address"
        android:id="@+id/editTextLectureAddress"
        android:layout_below="@+id/editTextLectureLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="37dp"
        android:layout_alignRight="@+id/editTextLectureId"
        android:layout_alignEnd="@+id/editTextLectureId" />

    <EditText
        android:hint="Lecture Id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editTextLectureId"
        android:layout_below="@+id/editTextLectureLastName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextLectureLastName"
        android:layout_alignEnd="@+id/editTextLectureLastName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add Lecture"
        android:onClick="onClickAddOrEditLecture"
        android:id="@+id/buttonAddLecture"
        android:layout_below="@+id/editTextLectureAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/editTextLectureFirstName"
        android:layout_alignEnd="@+id/editTextLectureFirstName" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Edit Lecture"
        android:onClick="onClickAddOrEditLecture"
        android:id="@+id/buttonEditLecture"
        android:layout_below="@+id/buttonAddLecture"
        android:layout_alignRight="@+id/editTextLectureAddress"
        android:layout_alignEnd="@+id/editTextLectureAddress"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
