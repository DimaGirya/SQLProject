<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Get student list"
        android:id="@+id/buttonGetStudentsList"
        android:onClick="onClickButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="GET COURSES LIST"
        android:id="@+id/buttonGetCoursesList"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="GET LECTURES LIST"
        android:id="@+id/buttonGetLecturesList"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:onClick="onClickButton"
        android:layout_height="wrap_content"
        android:text="Add student"
        android:id="@+id/buttonAddStudent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonRemoveStudent"
        android:layout_alignEnd="@+id/buttonRemoveStudent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REMOVE STUDNET"
        android:onClick="onClickButton"
        android:id="@+id/buttonRemoveStudent"
        android:layout_below="@+id/buttonAddStudent"
        android:layout_alignRight="@+id/buttonGetStudentsList"
        android:layout_alignEnd="@+id/buttonGetStudentsList" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="EDIT STUDENT"
        android:onClick="onClickButton"
        android:id="@+id/buttonEditStudent"
        android:layout_below="@+id/buttonRemoveStudent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/buttonRemoveStudent"
        android:layout_alignEnd="@+id/buttonRemoveStudent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="Add grade"
        android:id="@+id/buttonAddGrade"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/buttonRemoveGrade"
        android:layout_alignStart="@+id/buttonRemoveGrade"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="REMOVE GRADE"
        android:id="@+id/buttonRemoveGrade"
        android:layout_alignBottom="@+id/buttonRemoveStudent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="EDIT GRADE"
        android:id="@+id/buttonEditGrade"
        android:layout_alignBottom="@+id/buttonEditStudent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/buttonRemoveGrade"
        android:layout_alignStart="@+id/buttonRemoveGrade" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="ADD LECTURE"
        android:id="@+id/buttonAddLecture"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttonAddStudent"
        android:layout_alignRight="@+id/buttonRemoveLecture"
        android:layout_alignEnd="@+id/buttonRemoveLecture" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="REMOVE LECTURE"
        android:id="@+id/buttonRemoveLecture"
        android:layout_alignTop="@+id/buttonRemoveStudent"
        android:layout_toRightOf="@+id/buttonRemoveStudent"
        android:layout_toEndOf="@+id/buttonRemoveStudent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="EDIT LECTURE"
        android:id="@+id/buttonEditLecture"
        android:layout_alignBottom="@+id/buttonEditStudent"
        android:layout_alignRight="@+id/buttonAddLecture"
        android:layout_alignEnd="@+id/buttonAddLecture"
        android:layout_toRightOf="@+id/buttonEditStudent"
        android:layout_toEndOf="@+id/buttonEditStudent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="REMOVE COURSE"
        android:id="@+id/buttonRemoveCourse"
        android:layout_below="@+id/buttonAddGrade"
        android:layout_toLeftOf="@+id/buttonAddGrade"
        android:layout_toStartOf="@+id/buttonAddGrade" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="EDIT COURSE"
        android:id="@+id/buttonEditCourse"
        android:layout_below="@+id/buttonRemoveGrade"
        android:layout_toLeftOf="@+id/buttonEditGrade"
        android:layout_alignLeft="@+id/buttonRemoveCourse"
        android:layout_alignStart="@+id/buttonRemoveCourse" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="ADD COURSE"
        android:id="@+id/buttonAddCourse"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@+id/buttonAddGrade"
        android:layout_alignLeft="@+id/buttonRemoveCourse"
        android:layout_alignStart="@+id/buttonRemoveCourse" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="Show grades of student"
        android:id="@+id/buttonShowGradesOfStudent"
        android:layout_below="@+id/buttonEditStudent"
        android:layout_alignLeft="@+id/buttonRemoveStudent"
        android:layout_alignStart="@+id/buttonRemoveStudent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickButton"
        android:text="Top 3 Student of course"
        android:id="@+id/buttonTop3Students"
        android:layout_below="@+id/buttonShowGradesOfStudent"
        android:layout_toLeftOf="@+id/buttonGetCoursesList"
        android:layout_toStartOf="@+id/buttonGetCoursesList" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bottom 3 Student of course"
        android:id="@+id/buttonBottom3Students"
        android:layout_alignTop="@+id/buttonTop3Students"
        android:layout_toLeftOf="@+id/buttonEditGrade"
        android:layout_toStartOf="@+id/buttonEditGrade" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:hint="Student ID"
        android:layout_above="@+id/buttonTop3Students"
        android:layout_alignLeft="@+id/buttonBottom3Students"
        android:layout_alignStart="@+id/buttonBottom3Students"
        android:layout_alignRight="@+id/editText2"
        android:layout_alignEnd="@+id/editText2" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText2"
        android:hint="Course ID"
        android:layout_alignBottom="@+id/buttonBottom3Students"
        android:layout_toRightOf="@+id/buttonBottom3Students"
        android:layout_alignRight="@+id/buttonEditGrade"
        android:layout_alignEnd="@+id/buttonEditGrade" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_below="@+id/buttonBottom3Students"
        android:layout_toStartOf="@+id/buttonTop3Students"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_above="@+id/buttonGetStudentsList" />


</RelativeLayout>
